<%include ./partials/header%>
<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%blogs.forEach(function(post){%>
            <div class="item">
                <div class="image">
                    <img src="<%=post.image%>">
                </div>
                
                <div class="content">
                    <a class="header" href="/blog/<%= post._id %>"><%=post.title%></a>
                    <div class="meta">
                        <span><%=post.created.toDateString();%></span>
                    </div>
                    <div class="description">
                        <p><%-post.body.substring(0,100);%>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic button violet" href="/blog/<%= post._id %>">read more</a></span>        
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>

<%include ./partials/footer %>