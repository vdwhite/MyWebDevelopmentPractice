<% include ./partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit</div>

            
                                    <%//install package method-override first then use ?_method= to METHOD OVERRIDE%>
    <form class="ui form"action="/blog/<%=post._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value= "<%=post.title%>">
        </div>
        
        <div class="field">
            <img src="<%=post.image %>">
            <label>Image URL</label>
            <input type="text" name="blog[image]" value="<%=post.image%>">
        </div>
        
        <div class="field">
            <label>Text</label>
            <textarea name="blog[body]">
                <%=post.body%>
            </textarea>
        </div>
        
            <input class="ui blue button" type="submit"></input>
    </form>
</div>
<% include ./partials/footer%>